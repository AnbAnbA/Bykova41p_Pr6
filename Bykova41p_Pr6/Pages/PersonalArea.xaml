<Page x:Class="Bykova41p_Pr6.Pages.PersonalArea"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bykova41p_Pr6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalArea">

    <Grid>
        <StackPanel>
            <Image Height="200" Width="150" Name="imUser" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Source="\Res\def.jpg"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Margin="0,0,15,0">Фамилия пользователя:</TextBlock>
                <TextBlock Name="tbSurname"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Margin="0,0,15,0">Имя пользователя:</TextBlock>
                <TextBlock Name="tbName"></TextBlock>
            </StackPanel>
            <Button x:Name="redaUserData" Click="redaUserData_Click">Изменить личные данные</Button>
        </StackPanel>
    </Grid>
</Page>
