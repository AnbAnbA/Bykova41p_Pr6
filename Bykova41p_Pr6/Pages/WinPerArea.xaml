<Window x:Class="Bykova41p_Pr6.Pages.WinPerArea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bykova41p_Pr6.Pages"
        mc:Ignorable="d"
        Title="WinPerArea" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Введите имя">
                <TextBox Name="tbName"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите фамилию">
                <TextBox Name="tbSurname"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите отчество">
                <TextBox Name="tbPatr"></TextBox>
            </GroupBox>
            <GroupBox Header="Выберите дату рождения">
                <DatePicker Name="DPBirth"></DatePicker>
            </GroupBox>
            <Button x:Name="redPerdata" Click="redPerdata_Click">Изменить данные</Button>
        </StackPanel>
    </Grid>
</Window>
