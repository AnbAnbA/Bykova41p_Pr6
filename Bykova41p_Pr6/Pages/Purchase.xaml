<Page x:Class="Bykova41p_Pr6.Pages.Purchase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bykova41p_Pr6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Purchase">

    <Grid>
        <StackPanel>
        
        <ListView Name="LVPur" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center"></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="5" CornerRadius="5" BorderThickness="1" BorderBrush="BlueViolet">
                        <Grid Width="300" Height="200">
                            <StackPanel>
                                <TextBlock Text="{Binding CatGender}"></TextBlock>
                                <TextBlock Text="{Binding Table_Customer.NameCustomer}"></TextBlock>
                                <TextBlock Text="{Binding Table_Gender.genger}"></TextBlock>
                                <TextBlock Text="{Binding DatePurchase, StringFormat={}{0:dd.MM.yyyy}}"></TextBlock>
                                <TextBlock Loaded="TextBlock_Loaded" Uid="{Binding idPurchase}"></TextBlock>
                                <TextBlock>Уходит на питание:</TextBlock>
                                    <TextBlock Loaded="TextBlock_Loaded_1" Uid="{Binding idPurchase}"></TextBlock>
                                <Image  Height="50" Width="100"/>
                                
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackPanel>
    </Grid>
</Page>
